	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/new_tweet_bg">

		<com.soreepeong.darknova.ui.view.ChildBlockingFrameLayout
			android:id="@+id/user_select"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_toLeftOf="@+id/type_select"
			android:layout_toStartOf="@+id/type_select"
			android:background="@drawable/ripple_bg"
			android:padding="6dp"
			>

			<ImageView
				android:id="@+id/user_select_expander"
				android:layout_width="36dp"
				android:layout_height="36dp"
				android:src="?attr/ic_navigation_expand_less"/>

			<android.support.v7.widget.RecyclerView
				android:id="@+id/selected_user_image_list"
				android:layout_width="match_parent"
				android:layout_height="36dp"
				android:layout_marginLeft="36dp"
				android:layout_marginStart="36dp"
				android:clickable="false"
				android:focusable="false"
				android:overScrollMode="never"/>

			<TextView
				android:id="@+id/user_select_text"
				android:layout_width="100dp"
				android:layout_height="match_parent"
				android:layout_marginLeft="78dp"
				android:layout_marginStart="78dp"
				android:gravity="center_vertical|start"
				android:text="@string/new_tweet_select_user"
				android:textAppearance="?android:textAppearanceButton"/>
		</com.soreepeong.darknova.ui.view.ChildBlockingFrameLayout>

		<Button
			android:id="@+id/type_select"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:background="@drawable/ripple_bg"
			android:drawableEnd="?attr/ic_navigation_expand_less"
			android:drawableRight="?attr/ic_navigation_expand_less"
			android:padding="6dp"
			android:text="@string/new_tweet_oneshot"
			/>
	</RelativeLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/new_tweet_bg">

		<EditText
			android:id="@+id/editor"
			style="?android:attr/textStyle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="start|top"
			android:hint="@string/new_tweet_hint"
			android:inputType="text|textMultiLine"
			android:maxHeight="100sp"
			android:minHeight="64sp"/>
	</FrameLayout>

	<FrameLayout
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="?attr/new_tweet_bg">

		<Button
			android:id="@+id/clear_btn"
			android:layout_width="120dp"
			android:layout_height="48dp"
			android:layout_gravity="start"
			android:background="@drawable/ripple_bg"
			android:drawableLeft="?attr/ic_content_clear"
			android:drawableStart="?attr/ic_content_clear"
			android:paddingLeft="6dp"
			android:paddingRight="6dp"
			android:text="@string/new_tweet_clear"
			/>

		<ImageButton
			android:id="@+id/write_btn"
			android:layout_width="72dp"
			android:layout_height="48dp"
			android:layout_gravity="end"
			android:background="@drawable/ripple_bg"
			android:contentDescription="@string/new_tweet_save"
			android:padding="8dp"
			android:scaleType="fitCenter"
			android:src="?attr/ic_content_send"
			/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/attach_list"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_gravity="end"
			android:layout_marginEnd="72dp"
			android:layout_marginLeft="120dp"
			android:layout_marginRight="72dp"
			android:layout_marginStart="120dp"
			android:orientation="horizontal"
			android:overScrollMode="ifContentScrolls"/>
	</FrameLayout>
</LinearLayout>