<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/navigationHeader"
			 xmlns:android="http://schemas.android.com/apk/res/android"
			 android:layout_width="match_parent"
			 android:layout_height="178dp">
	<ImageView
		android:id="@+id/imgAccountBackground"
		android:layout_width="match_parent"
		android:layout_height="168dp"
		android:src="@drawable/wallpaper"
		android:tint="#30000000"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="168dp"
		android:background="@android:color/transparent">

		<ImageView
			android:id="@+id/imgAvatar"
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_marginBottom="8dp"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			android:layout_marginTop="40dp"/>

		<ImageButton
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_alignParentBottom="true"
			android:src="?ic_navigation_expand_more"
			android:background="@drawable/ripple_bg"
			android:id="@+id/show_account_list"
			/>

		<TextView
			android:id="@+id/txtScreenName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentBottom="true"
			android:layout_toLeftOf="@id/show_account_list"
			android:layout_toStartOf="@id/show_account_list"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="16dp"
			android:text="@string/placeholder"
			android:textSize="14sp"
			android:textColor="@android:color/white"/>

		<TextView
			android:id="@+id/txtUsername"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@id/txtScreenName"
			android:layout_alignRight="@id/txtScreenName"
			android:layout_alignStart="@id/txtScreenName"
			android:layout_alignEnd="@id/txtScreenName"
			android:layout_marginBottom="4dp"
			android:layout_above="@id/txtScreenName"
			android:text="@string/placeholder"
			android:textColor="@android:color/white"
			android:textSize="14sp"
			android:textStyle="bold"/>
	</RelativeLayout>
	<View
		android:id="@+id/separator"
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:layout_marginTop="168dp"
		android:layout_marginBottom="8dp"
		android:background="#1f000000" />
</FrameLayout>
