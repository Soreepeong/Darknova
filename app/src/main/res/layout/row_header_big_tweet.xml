<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<FrameLayout
		android:id="@+id/retweet_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="8dp">

		<ImageView
			android:id="@+id/retweeter_picture"
			android:layout_width="24sp"
			android:layout_height="24sp"
			android:layout_marginLeft="36sp"
			android:layout_marginStart="36sp"
			android:background="@android:color/white"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="24sp"
			android:layout_marginLeft="68sp"
			android:layout_marginStart="68sp"
			android:gravity="start|center_vertical"
			android:text="~ retweeted"
			android:textAppearance="?android:textAppearanceSmall"/>

	</FrameLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="60sp"
		android:layout_margin="8dp">

		<ImageView
			android:id="@+id/user_picture"
			android:layout_width="60sp"
			android:layout_height="60sp"
			android:background="@android:color/white"/>

		<TextView
			android:id="@+id/user_id"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginBottom="12sp"
			android:layout_marginLeft="68sp"
			android:layout_marginStart="68sp"
			android:text="@string/placeholder"
			android:textAppearance="?android:textAppearanceMedium"
			android:textColor="?android:textColorPrimary"/>

		<TextView
			android:id="@+id/user_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="68sp"
			android:layout_marginStart="68sp"
			android:layout_marginTop="12sp"
			android:text="@string/placeholder"
			android:textAppearance="?android:textAppearanceMedium"/>
	</FrameLayout>

	<TextView
		android:id="@+id/text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="8sp"
		android:text="@string/placeholder"
		android:textAppearance="?android:textAppearanceMedium"
		android:textColor="?android:textColorPrimary"/>

	<TextView
		android:id="@+id/description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="8sp"
		android:text="@string/placeholder"
		android:textAppearance="?android:textAppearanceSmall"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@android:color/white"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/reply"
			android:layout_width="0sp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ripple_bg"
			android:padding="8dp"
			android:scaleType="fitCenter"
			android:src="?attr/ic_content_reply"/>

		<ImageButton
			android:id="@+id/retweet"
			android:layout_width="0sp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ripple_bg"
			android:padding="8dp"
			android:scaleType="fitCenter"
			android:src="?attr/ic_av_repeat"/>

		<TextView
			android:id="@+id/retweet_count"
			android:layout_width="32sp"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:background="@drawable/ripple_bg"
			android:gravity="center"
			android:padding="8dp"
			android:text="0"
			android:textAppearance="?android:textAppearanceButton"/>

		<ImageButton
			android:id="@+id/favorite"
			android:layout_width="0sp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ripple_bg"
			android:padding="8dp"
			android:scaleType="fitCenter"
			android:src="?attr/ic_action_star_rate"/>

		<TextView
			android:id="@+id/favorite_count"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:background="@drawable/ripple_bg"
			android:gravity="center"
			android:padding="8dp"
			android:text="0"
			android:textAppearance="?android:textAppearanceButton"/>

		<ImageButton
			android:id="@+id/share"
			android:layout_width="0sp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/ripple_bg"
			android:padding="8dp"
			android:scaleType="fitCenter"
			android:src="?attr/ic_social_share"/>
	</LinearLayout>
</LinearLayout>