		<activity
			android:name="com.soreepeong.darknova.ui.MainActivity"
			android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:windowSoftInputMode="adjustResize">
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable"/>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<!--  -->

				<category android:name="android.intent.category.LAUNCHER"/>
				<category android:name="android.intent.category.MULTIWINDOW_LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.MediaPreviewActivity"
			android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
			android:label="@string/mediapreview_name"
			android:theme="@style/TransparentAppTheme"
			android:windowSoftInputMode="adjustResize">
			<intent-filter android:label="@string/app_name">
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE" />

				<data
					android:host="*"
					android:pathPattern=".*\\.jpg"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.jpeg"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.png"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.gif"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.bmp"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.JPG"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.JPEG"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.PNG"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.GIF"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.BMP"
					android:scheme="http"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.jpg"
					android:scheme="https"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.jpeg"
					android:scheme="https"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.png"
					android:scheme="https"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.gif"
					android:scheme="https"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.bmp"
					android:scheme="https"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.JPG"
					android:scheme="https"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.JPEG"
					android:scheme="https"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.PNG"
					android:scheme="https"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.GIF"
					android:scheme="https"/>
				<data
					android:host="*"
					android:pathPattern=".*\\.BMP"
					android:scheme="https"/>
			</intent-filter>
		</activity>
	</application>

</manifest>
